# Example environment variables for Recommendation Engine
# Copy this file to .env and update with your values

# Server Configuration
RECO_SERVER_INGEST_HOST=0.0.0.0
RECO_SERVER_INGEST_PORT=8080
RECO_SERVER_API_HOST=0.0.0.0
RECO_SERVER_API_PORT=8081

# Kafka Configuration
RECO_KAFKA_BROKERS=localhost:9092
RECO_KAFKA_TOPICS_EVENTS=events
RECO_KAFKA_CONSUMER_GROUP=reco-processor

# Redis Configuration
RECO_REDIS_ADDR=localhost:6379
RECO_REDIS_PASSWORD=
RECO_REDIS_DB=0
RECO_REDIS_MAX_RETRIES=3
RECO_REDIS_POOL_SIZE=10

# PostgreSQL Configuration
RECO_POSTGRES_HOST=localhost
RECO_POSTGRES_PORT=5432
RECO_POSTGRES_USER=reco
RECO_POSTGRES_PASSWORD=secret
RECO_POSTGRES_DATABASE=reco
RECO_POSTGRES_SSLMODE=disable
RECO_POSTGRES_MAX_OPEN_CONNS=25
RECO_POSTGRES_MAX_IDLE_CONNS=5

# Processing Configuration
RECO_PROCESSING_BATCH_SIZE=100
RECO_PROCESSING_FLUSH_INTERVAL=5s
RECO_PROCESSING_RECENT_ITEMS_LIMIT=50
RECO_PROCESSING_COVIEW_WINDOW=20

# Recommendation Configuration
RECO_RECOMMENDATION_DEFAULT_COUNT=10
RECO_RECOMMENDATION_MAX_COUNT=100
RECO_RECOMMENDATION_CACHE_TTL=5m
RECO_RECOMMENDATION_POPULARITY_DECAY=0.95

# Recommendation Weights
RECO_RECOMMENDATION_WEIGHTS_COVIEW=0.4
RECO_RECOMMENDATION_WEIGHTS_EMBEDDING=0.3
RECO_RECOMMENDATION_WEIGHTS_POPULARITY=0.2
RECO_RECOMMENDATION_WEIGHTS_RECENCY=0.1

# Event Weights
RECO_EVENT_WEIGHTS_VIEW=1.0
RECO_EVENT_WEIGHTS_CLICK=3.0
RECO_EVENT_WEIGHTS_CART=5.0
RECO_EVENT_WEIGHTS_PURCHASE=10.0

# Observability
RECO_OBSERVABILITY_METRICS_ENABLED=true
RECO_OBSERVABILITY_METRICS_PORT=9090
RECO_OBSERVABILITY_TRACING_ENABLED=true
RECO_OBSERVABILITY_TRACING_ENDPOINT=http://localhost:14268/api/traces
RECO_OBSERVABILITY_LOGGING_LEVEL=info
RECO_OBSERVABILITY_LOGGING_FORMAT=json
